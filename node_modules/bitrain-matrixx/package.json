{
  "name": "bitrain-matrixx",
  "version": "2.1.2",
  "description": "A zero-dependency library that renders a Matrix-style bit-rain effect on the page background.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/auto.js",
      "default": "./dist/auto.js"
    },
    "./core": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "build:core:js": "tsup src/index.ts src/auto.ts --format esm --minify --treeshake --target=es2018 --sourcemap false --clean",
    "build:core:types": "tsc -p tsconfig.build.json",
    "build": "npm run clean && npm run build:core:js && npm run build:core:types",
    "build:cjs": "tsup src/index.ts src/auto.ts --format cjs --minify --treeshake --target=es2018 --sourcemap false",
    "build:iife": "tsup src/index.ts --format iife --global-name=BitRainMatrixx --minify --treeshake --target=es2018 --sourcemap false",
    "prepublishOnly": "npm run build",
    "pack": "npm pack --pack-destination dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hanny658/BitRain-Matrixx.git"
  },
  "keywords": [
    "canvas",
    "matrix",
    "rain",
    "visual-effect",
    "web-component",
    "no-deps"
  ],
  "author": "Hanny Zhang",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Hanny658/BitRain-Matrixx/issues"
  },
  "homepage": "https://github.com/Hanny658/BitRain-Matrixx#readme",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "rimraf": "^6.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}
